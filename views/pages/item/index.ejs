<div class="body-container">
    <div class="container-fluid no-padding pt-4">

        <div class="row">
            <div class="container-fluid">
                <form action="/search" method="get" class="searchForm">
                    <div class="fixbar input-group">
                        <input type="input" class="fixbar form-control rounded" placeholder="Search" name="search" />
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Filter
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                <li>
                                    <label for="price_von">Preis Von:</label><br>
                                    <input class="dropdown-item" type="number" id="price_von" name="price_von" value="0">
                                </li>
                                <li>
                                    <label for="price_bis">Preis Bis:</label><br>
                                    <input class="dropdown-item" type="number" id="price_bis" name="price_bis"
                                        value="100">
                                </li>
                                <li>
                                    <label class="col-form-label-lg">Kategorie</label>
                                    <select class="form-select" name="category">
                                        <option disabled selected value="0">select</option>
                                        <% categories.forEach(function(category){ %>
                                            <option value="<%= category.id %>">
                                                <%= category.name %>
                                            </option>
                                            <% }); %>
                                    </select>
                                </li>
                            </ul>
                        </div>
                        <button type="submit" class="fixbar btn btn-outline-primary">search</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <% items.forEach(function(item){ %>
                <div class="col-sm-3">
                    <div class="card">
                        <img src="images/croissants.jpg" class="card-img-top" alt="Product Image">
                        <div class="card-body">
                            <div class="row">
                                <h5 class="card-title">
                                    <%= item.name %>
                                </h5>
                                <p class="card-text">Product Name</p>
                                <a href="#" class="btn btn-primary">Buy Now</a>
                            </div>
                            <div class="row">
                                <td> <a class="green-button" href="/item/<%= item.id %>">anzeigen</a></td>
                                <td> <a class="green-button" href="/item/<%= item.id %>/edit">ändern</a></td>
                                <td> <a class="green-button" href="/item/<%= item.id %>/destroy">löschen</a></td>
                            </div>
                        </div>

                    </div>
                </div>

                <% }); %>
        </div>
        <div class="row">
            <a class="green-button" href="/item/new">Hinzufügen</a>
        </div>
    </div>
</div>