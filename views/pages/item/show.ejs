
<div class="container">
    <div class="card w-100 mt-4">
        <div>
            <div class="row">
                <div class="col-2">
                    Name
                </div> 
                <div class="col-10">
                    <%= item.name %>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    Preis
                </div> 
                <div class="col-10">
                    <%= item.price %>
                </div>
            </div>
            <div class="row">
                <div class="col-2">
                    Beschreibung
                </div> 
                <div class="col-10">
                    <%= item.description %>
                </div>
            </div>
            <% if(item.category) { %>
                <div class="row">
                    <div class="col-2">
                        Kategorie
                    </div> 
                    <div class="col-10">
                        <%= item.category.name %>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
</div>