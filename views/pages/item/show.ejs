<div class="container-fluid bg-light">
  <div class="row justify-content-center align-items-center py-5">
    <div class="col-md-6">
      <div class="p-4 border rounded">
        <% if(item.picture) { %>
          <div class="row">
            <div class="col-2">
              Bild
            </div>
            <div class="col-10">
              <img src="https://wetebucket.s3.us-west-2.amazonaws.com/<%= item.picture %>"
                class="img-fluid w-100 rounded-top" alt="Product Image">
            </div>
          </div>
          <% } %>
            <h1 class="mt-4 mb-3">
              <%= item.name %>
            </h1>
            <div class="mb-4">
              <%= item.description %>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <h5>Preis</h5>
              </div>
              <div class="col-md-6">
                <div class="text-lg-end">€ <%= item.price %>
                </div>
              </div>
            </div>
            <% if(item.category) { %>
              <div class="row mb-3">
                <div class="col-md-6">
                  <h5>Kategorie</h5>
                </div>
                <div class="col-md-6">
                  <div class="text-lg-end">
                    <%= item.category.name %>
                  </div>
                </div>
              </div>
              <% } %>
                <div class="row">
                  <div class="col-md-12 d-flex justify-content-center">
                    <button onclick="history.back()" class="button-17 btn btn-secondary">Zurück</button>
                  </div>
                </div>
      </div>
    </div>
  </div>
</div>