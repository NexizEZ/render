<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="edit-container">
                    <div class="row">
                        <div class="col">
                            <h4 class="page-title">Produkt bearbeiten</h4>
                        </div>
                    </div>
                    <form action="/item/<%=item.id%>/update" method="post" class="mt-4" enctype="multipart/form-data">
                        <div class="form-group mb-3">
                            <label class="form-label">Name</label>
                            <input type="text" class="form-control" maxlength="80" value="<%= item.name %>" name="name"
                                required>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Beschreibung</label>
                            <textarea maxlength="255" class="form-control" rows="3" name="description"
                                required><%= item.description %></textarea>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Bild</label>
                            <div class="container">
                                <div class="form-group mb-3">
                                    <label class="col-form-label-lg">Bild für <%= item.name%></label>
                                    <input type="file" class="form-control" name="image">
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label class="form-label">Preis</label>
                            <div class="input-group">
                                <span class="input-group-text">€</span>
                                <input type="text" class="form-control" maxlength="8" value="<%= item.price %>"
                                    name="price" required>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label for="category" class="form-label">Kategorie</label>
                            <select class="form-select" id="category" name="category" required>
                                <option value="" selected disabled>Bitte Kategorie auswählen</option>
                                <% categories.forEach(function(category){ %>
                                    <option value="<%= category.id %>">
                                        <%= category.name %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary button-17">Aktualisieren</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>