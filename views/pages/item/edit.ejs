<div class="edit-container">
    <div class="row">
        <div class="col">
            <h4 class="page-title">Produkt bearbeiten</h4>
        </div>
    </div>
    <form action="/item/<%=item.id%>/update" method="post" class="mt-4">
        <div class="form-group mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" maxlength="80" value="<%= item.name %>" name="name">
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Preis</label>
            <div class="input-group">
                <span class="input-group-text">€</span>
                <input type="text" class="form-control" maxlength="8" value="<%= item.price %>" name="price">
            </div>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Beschreibung</label>
            <textarea maxlength="255" class="form-control" rows="3"
                name="description"><%= item.description %></textarea>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Kategorie</label>
            <select class="form-select" aria-label="Kategorie auswählen" name="category">
                <option disabled selected>Bitte wählen</option>
                <% categories.forEach(function(category) { %>
                    <option value="<%= category.id %>">
                        <%= category.name %>
                    </option>
                    <% }); %>
            </select>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Bild</label>
            <input type="text" maxlength="255" class="form-control" value="<%= item.picture %>" name="picture">
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary button-17">Aktualisieren</button>
        </div>
    </form>
</div>