<div class="container">
    <form action="/item/<%=item.id%>/update" method="post">
        <div>
            <div class="form-group">
                <label class="col-form-label-lg">Name</label>
                <input type="text" class="form-control" maxlength="80" value="<%= item.name %>" name="name">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Preis</label>
                <input type="text" class="form-control" maxlength="8" value="<%= item.price %>" name="price">
            </div>
            <div class="form-group">
                <label class="col-form-label-lg">Beschreibung</label>
                <input type="text" maxlength="255" class="form-control" size="40" value="<%= item.description %>" name="description">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Aktualisieren</button>
    </form>
</div>