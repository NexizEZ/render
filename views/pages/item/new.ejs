<div class="container my-5">
    <div class="row justify-content-center">
      <div class="col-lg-8">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4">
            <h2 class="h4 mb-4">Neues Produkt hinzufügen</h2>
            <form action="/item" method="post">
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" maxlength="40" placeholder="Name des Produkts" required>
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Beschreibung</label>
                <textarea class="form-control" id="description" name="description" maxlength="200" placeholder="Beschreibung des Produkts" rows="3" required></textarea>
              </div>
              <div class="mb-3">
                <label for="typ" class="form-label">Typ</label>
                <input type="text" class="form-control" id="typ" name="typ" maxlength="40" placeholder="Typ des Produkts">
              </div>
              <div class="mb-3">
                <label for="picture" class="form-label">Bild</label>
                <input type="text" class="form-control" id="picture" name="picture" maxlength="40" placeholder="URL zum Bild des Produkts">
              </div>
              <div class="mb-3">
                <label for="price" class="form-label">Preis</label>
                <div class="input-group">
                  <span class="input-group-text">€</span>
                  <input type="number" class="form-control" id="price" name="price" min="0" step=".01" placeholder="Preis des Produkts" required>
                </div>
              </div>
              <div class="mb-3">
                <label for="itemorder" class="form-label">Reihenfolge</label>
                <input type="number" class="form-control" id="itemorder" name="itemorder" placeholder="Reihenfolge des Produkts">
              </div>
              <div class="mb-3">
                <label for="category" class="form-label">Kategorie</label>
                <select class="form-select" id="category" name="category" required>
                  <option value="" selected disabled>-- Bitte Kategorie auswählen --</option>
                  <% categories.forEach(function(category){ %>
                  <option value="<%= category.id %>">
                    <%= category.name %>
                  </option>
                  <% }); %>
                </select>
              </div>
              <div class="text-center">
                <button type="submit" class="button-17 btn btn-success">Produkt hinzufügen</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  