<div id="app">
    <div class="container">
        <div class="h2">Bestellungen:</div>
        <br>
        <ul class="list-group mb-4">
            <div v-if="alterVisible" class="alert alert-primary">
                Bestellung stoniert!
            </div>
            <li class="list-group-item" v-for="order in orders">
                <div class="row">
                    <div class="col-md-0 col-md-6 h3">
                        KundenID: {{ order.userId }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-0 col-md-6 h3">
                        Bestellnummer: {{ order.id }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-0 col-md-6 h3">
                        Anschrift: {{ order.address }}
                    </div>

                    <div class="col-md-0 col-md-6 h3 d-flex justify-content-end">
                        Preis Total: {{ order.totalAmount }} €
                    </div>
                </div>
                <h3>Produkte:</h3>
                <ul>
                    <div v-for="item in order.item">
                        <li>
                            <div class="d-flex justify-content-between">
                                <span>{{ item.name }}</span>
                            </div>
                        </li>
                    </div>
                </ul>
                <div class="col-md-6">
                    <div class="d-flex justify-content-end">
                        <button class="button-17" @click="storno(order.id)">Löschen/Stonieren</button>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>

<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>

<script type="module">
    import orderAll from '/vue/ordersAll.js'
    const { createApp } = Vue
    createApp(orderAll).mount("#app")
</script>