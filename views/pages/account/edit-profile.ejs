<div id="edit-profile" v-cloak>
    <account-notification-banner></account-notification-banner>
    <div class="container pt-5 pb-5">
        <h1 class="mb-4">Update Personal Information</h1>
        <hr class="mb-4" />
        <form action="/updateProfile" method="POST">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="full-name" class="form-label">Full Name</label>
                    <input class="form-control" id="full-name" name="fullName" type="text"
                        placeholder="Sturgis P. Sturgeon" autocomplete="name" value="<%= req.me.fullName %>">
                    <div class="invalid-feedback">Please enter your full name.</div>
                </div>
                <div class="col-md-6 mt-3 mt-md-0">
                    <label for="email-address" class="form-label">Email Address</label>
                    <input class="form-control" id="email-address" name="emailAddress" type="email"
                        placeholder="sturgeon@example.com" autocomplete="email" value="<%= req.me.emailAddress %>">
                    <div class="invalid-feedback">Please enter a valid email address.</div>
                    <% if (req.emailAlreadyExists) { %>
                        <div class="text-danger mt-2">There is already an account using that email address.</div>
                    <% } %>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <a class="btn btn-outline-secondary me-3 button-17" href="/account">Cancel</a>
                <button type="submit" class="btn btn-primary button-17">Save Changes</button>
            </div>
        </form>
    </div>
</div>
<%- /* Expose locals as `window.SAILS_LOCALS` :: */ exposeLocalsToBrowser() %>